        {
          "name": "Get Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}",
                "type": "text"
              },
              {
                "key": "Client-Id",
                "value": "{{client_id}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}users?login=twitchdev",
              "protocol": "https",
              "host": ["api", "twitch", "tv"],
              "path": ["helix", "users"],
              "query": [
                {
                  "key": "login",
                  "value": "twitchdev",
                  "description": "User login name (e.g., twitchdev)"
                }
              ]
            },
            "description": "Retrieve details of users by login name or ID."
