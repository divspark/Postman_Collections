  "item": [
    {
      "name": "PaymentIntents",
      "item": [
        {
          "name": "Create a PaymentIntent",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded",
                "type": "text"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{secret_key}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "amount",
                  "value": "2000",
                  "description": "Amount in cents (e.g., 2000 = $20.00)",
                  "type": "text"
                },
                {
                  "key": "currency",
                  "value": "usd",
                  "description": "Currency code (e.g., usd)",
                  "type": "text"
                },
                {
                  "key": "payment_method_types[]",
                  "value": "card",
                  "description": "Payment method (e.g., card)",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}payment_intents",
              "protocol": "https",
              "host": ["api", "stripe", "com"],
              "path": ["v1", "payment_intents"]
            },
            "description": "Create a PaymentIntent to initiate a payment process. Specify amount, currency, and payment method."
          }
        },
        {
          "name": "Retrieve a PaymentIntent",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{secret_key}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}payment_intents/pi_123456789",
              "protocol": "https",
              "host": ["api", "stripe", "com"],
              "path": ["v1", "payment_intents", "pi_123456789"],
              "query": [
                {
                  "key": "pi_123456789",
                  "value": "PaymentIntent ID (e.g., pi_123456789)",
                  "disabled": true
                }
              ]
            },
            "description": "Retrieve details of a specific PaymentIntent by ID."
          }
        },
        {
          "name": "Update a PaymentIntent",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded",
                "type": "text"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{secret_key}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "amount",
                  "value": "2500",
                  "description": "Updated amount in cents (e.g., 2500 = $25.00)",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}payment_intents/pi_123456789",
              "protocol": "https",
              "host": ["api", "stripe", "com"],
              "path": ["v1", "payment_intents", "pi_123456789"]
            },
            "description": "Update a PaymentIntent, e.g., to modify the amount."
          }
        },
        {
          "name": "List PaymentIntents",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{secret_key}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}payment_intents?limit=10",
