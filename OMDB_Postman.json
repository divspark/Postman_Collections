  "info": {
    "_postman_id": "k5l6m7n8-o0p1-09q3-h684-334455440009",
    "name": "OMDb API Collection",
    "description": "A complete Postman collection for the Open Movie Database (OMDb) API to retrieve movie, series, and episode information. All requests use the single endpoint http://www.omdbapi.com/ with varying query parameters. Requires an API key (free keys at http://www.omdbapi.com/apikey.aspx, 1,000 daily limit). Covers all documented functionalities as of August 2025, including search, title lookup, IMDb ID lookup, season episodes, and parameter combinations for year, type, and plot.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Search Movies/Series",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          },
          {
            "key": "Accept",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}?apikey={{api_key}}&s=batman&type=movie&page=1",
          "protocol": "http",
          "host": ["www", "omdbapi", "com"],
          "path": [""],
          "query": [
            {
              "key": "apikey",
              "value": "{{api_key}}",
              "description": "Your OMDb API key"
            },
            {
              "key": "s",
              "value": "batman",
              "description": "Search term (e.g., batman)"
            },
            {
              "key": "type",
              "value": "movie",
              "description": "Content type (movie, series, episode)"
            },
            {
              "key": "page",
              "value": "1",
              "description": "Page number for pagination (1-100)"
            }
          ]
        },
        "description": "Search for movies, series, or episodes by term. Returns up to 10 results per page, with pagination support (max 100 pages). Use 'type' to filter results."
      }
    },
