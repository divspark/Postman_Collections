  "item": [
    {
      "name": "Payments",
      "item": [
        {
          "name": "Capture a Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded",
                "type": "text"
              },
              {
                "key": "Authorization",
                "value": "Basic {{auth_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "amount",
                  "value": "2000",
                  "description": "Amount in paise (e.g., 2000 = INR 20.00)",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}payments/pay_123456789/capture",
              "protocol": "https",
              "host": ["api", "razorpay", "com"],
              "path": ["v1", "payments", "pay_123456789", "capture"]
            },
            "description": "Capture an authorized payment by ID. Requires amount in paise."
          }
        },
        {
          "name": "Fetch a Payment",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Basic {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}payments/pay_123456789",
              "protocol": "https",
              "host": ["api", "razorpay", "com"],
              "path": ["v1", "payments", "pay_123456789"]
            },
            "description": "Retrieve details of a specific payment by ID."
          }
        },
        {
          "name": "Fetch All Payments",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Basic {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}payments?count=10&skip=0",
              "protocol": "https",
              "host": ["api", "razorpay", "com"],
              "path": ["v1", "payments"],
              "query": [
                {
                  "key": "count",
                  "value": "10",
                  "description": "Number of records to fetch (default 10)"
                },
                {
                  "key": "skip",
                  "value": "0",
                  "description": "Number of records to skip (default 0)"
                }
              ]
            },
            "description": "Retrieve a list of all payments with pagination."
          }
        },
        {
          "name": "Fetch Payments with Card Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Basic {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}payments?expand[]=card&count=10",
              "protocol": "https",
              "host": ["api", "razorpay", "com"],
              "path": ["v1", "payments"],
              "query": [
                {
                  "key": "expand[]",
                  "value": "card",
                  "description": "Expand card details in response"
                },
                {
                  "key": "count",
                  "value": "10",
                  "description": "Number of records to fetch (default 10)"
                }
              ]
            },
            "description": "Retrieve all payments with expanded card details."
          }
        },
        {
          "name": "Refund a Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded",
                "type": "text"
              },
              {
                "key": "Authorization",
                "value": "Basic {{auth_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "amount",
                  "value": "2000",
                  "description": "Amount to refund in paise",
                  "type": "text"
